@model AccrualWorld.Models.Income

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            Paid Invoice
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/invoice/" + Model.ImagePath)" asp-append-version="true" width="450px" height="450px" />
        </dd>





    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IncomeId" class="btn btn-primary" >Edit</a> 
    <a asp-action="Index" class="btn btn-primary">Back to Payments</a>
</div>
