@model IEnumerable<AccrualWorld.Models.Income>

@{
    ViewData["Title"] = "Index";
}

<h1>Incomes</h1>

<p>
    <a asp-action="Create">Add Received Payment</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
               Paid Invoice
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payer)
            </th>
            <th></th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    <img src="@("~/invoice/" + item.ImagePath)" asp-append-version="true" width="250px" height="250px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payer)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.IncomeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IncomeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IncomeId">Delete</a>
                </td>
            </tr>
        
    }
        </tbody>
    </table>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Current Monthly Total
            </th>
            <th>
               Current Yearly Total
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                $@Model.Where(i => i.DateTime.Month.ToString() == DateTime.Now.Month.ToString() && i.DateTime.Year.ToString() == DateTime.Now.Year.ToString()).Sum(i => i.Total)
            </td>
            <td>
                $@Model.Where(i => i.DateTime.Year.ToString() == DateTime.Now.Year.ToString()).Sum(i => i.Total)
            </td>

        </tr>

    </tbody>
    </table>
