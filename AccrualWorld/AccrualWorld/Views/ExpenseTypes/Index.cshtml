@model IEnumerable<AccrualWorld.Models.ExpenseType>

@{
    ViewData["Title"] = "Index";
}

<h1>Overview of Expenses</h1>


<table class="table table-striped table-bordered shadow-lg" style="background-color: #F6F1EA">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.ExpenseTypeId"> @Html.DisplayFor(modelItem => item.Label)</a>
                <p><strong>Current Total Expense for Month:</strong> $@Math.Round(item.Expenses.Where(i => i.DateTime.Month.ToString() == DateTime.Now.Month.ToString() && i.DateTime.Year.ToString() == DateTime.Now.Year.ToString()).Sum(i => i.Total), 2)</p>
                <p><strong>Current Total Expense for Year:</strong> $@Math.Round(item.Expenses.Where(i => i.DateTime.ToString().Contains(DateTime.Now.Year.ToString())).Sum(i => i.Total), 2)</p>

            </td>
            
        </tr>
}

    </tbody>
</table>
