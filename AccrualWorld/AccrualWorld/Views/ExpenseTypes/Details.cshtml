@model AccrualWorld.Models.ExpenseType

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ExpenseType</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
    </dl>
    <h4>Expenses</h4>
    <ul>
        @foreach (Expense item in Model.Expenses)
        {
            <li><strong>Date Purchased:</strong> @item.DateTime    |   <strong>Total:</strong> $@item.Total</li>
        }
    </ul>
    <p><strong>Current Total Expense for Month:</strong> $@Model.Expenses.Where(i=> i.DateTime.ToString().Contains(DateTime.Now.Month.ToString())).Sum(i => i.Total)</p>
    <p><strong>Current Total Expense for Year:</strong> $@Model.Expenses.Where(i => i.DateTime.ToString().Contains(DateTime.Now.Year.ToString())).Sum(i => i.Total)</p>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ExpenseTypeId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
