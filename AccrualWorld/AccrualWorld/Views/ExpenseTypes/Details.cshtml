@model AccrualWorld.Models.ExpenseType

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ExpenseType</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
    </dl>
    <h4>Expenses</h4>
    <ul>
        @foreach (Expense item in Model.Expenses)
        {
        <li>Date Purchased: @item.DateTime      |       Total: $@item.Total  </li>
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ExpenseTypeId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
