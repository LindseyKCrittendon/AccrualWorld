@model AccrualWorld.Models.Expense

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Expense</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            Receipt
        </dt>
        <dd class = "col-sm-10">
           <img src="@("~/receipt/" + Model.ImagePath)" asp-append-version="true" width="250px" height="250px" />
        </dd>
       <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpenseType.Label)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Delete" asp-route-id="@Model.ExpenseId" class="btn btn-danger">Delete Expense</a> |
    <a asp-controller="ExpenseTypes" asp-action="Index" class="btn btn-primary">View Expenses</a>
</div>
