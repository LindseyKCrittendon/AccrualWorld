@model AccrualWorld.Models.ExpenseViewModels.ExpenseAndTypeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add an Expense</h1>

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="expense.ExpenseTypeId" class="control-label"></label>
                <select asp-for="expense.ExpenseTypeId" class ="form-control" asp-items="@Model.expenseTypes"></select>
                <span asp-validation-for="expense.ExpenseTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="expense.Total" class="control-label"></label>
                <input asp-for="expense.Total" class="form-control" />
                <span asp-validation-for="expense.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="expense.DateTime" class="control-label"></label>
                <input asp-for="expense.DateTime" class="form-control" />
                <span asp-validation-for="expense.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="expense.ImagePath" class="control-label"></label>
                <input asp-for="expense.ImagePath" class="form-control" />
                <span asp-validation-for="expense.ImagePath" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Add Expense" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ExpenseTypes" asp-action="Index" class="btn btn-primary">View Expenses</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
