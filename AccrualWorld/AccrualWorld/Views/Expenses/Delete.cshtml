@model AccrualWorld.Models.Expense

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Expense</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            Receipt
        </dt>
        <dd class = "col-sm-10">
            <img src="@("~/receipt/" + Model.ImagePath)" asp-append-version="true" width="250px" height="250px" />
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpenseType.Label)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ExpenseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="ExpenseTypes" asp-action="Index" class="btn btn-dark">Back to Expenses</a>
    </form>
</div>
